extends layout

block content
  h1= title
  p Login

  form(action='/users/login', method='post')
    .form-group
      label Email
      input.form-control(type='text', name='email', placeholder='Email', required='')
    .form-group
      label Password
      input.form-control(type='password', name='password', placeholder='Password', required='')
    button.btn.btn-primary(type='submit', value='login') Login


  form(action='/users/create', method='post')
    .form-group
      label Email
      input(type='text', name='email', required='')
    .form-group
      label Username
      input(type='text', name='username', required='')
    .form-group
      label MyAnimeList Username
      input(type='text', name='mal_username', required='')
    .form-group
      label Password
      input(type='password', name='password', required='')
    button.btn.btn-primary(type='submit', value='create') Create account